@model IEnumerable<Technurans_Task.Models.Domain.Task>
@{
}
<div class="mt-2" style="width:50%">

    <div class="row">
        <div class="col-md-4">
            <a href="/Employee/AddPerson" class="btn btn-priary">AddPersons</a>
        </div>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Role</th>

            <th>ACtion</th>
        </tr>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.Name</td>
                <td>@person.Description</td>
                <td>@person.Role</td>
                <td>
                    <a class="btn btn-success" href="/Employee/EditPerson?id=@person.Id">Edit</a>
                    <a class="btn btn-danger" href="/Employee/DeletePerson?id=@person.Id">Delete</a>
                </td>
            </tr>
        }
    </thead>

</table>
